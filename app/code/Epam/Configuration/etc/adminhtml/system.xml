<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="epam" translate="label" sortOrder="999999">
            <label>Epam</label>
        </tab>
        <section id="epam_config" translate="label" type="text" sortOrder="10" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Epam Snippet Configuration</label>
            <tab>epam</tab>
            <resource>Epam_Configuration::index</resource>

            <group id="epam_group" translate="label" type="text" sortOrder="1" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>Snippet text</label>
                <comment>Some text goes here</comment>
                <field id="enabled" type="select" translate="label" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable All the things</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="epam_text" translate="label" type="text" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Type something here</label>
                </field>
            </group>
        </section>
    </system>
</config>
