<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="epam_table_snippet2" resource="default" engine="innodb" comment="Epam table snipped">
        <column xsi:type="smallint" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="timestamp" name="created_at" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" comment="Modification Time"/>
        <column xsi:type="smallint" name="is_active" unsigned="true" nullable="false" default="0"
                comment="Is Active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>